package phone;

import java.awt.*;
import javax.swing.*;

// UI
// Renders all the UI: window, panels, buttons

public class UI extends JFrame {
	
	public UI() {
		_InitUI();
	}
	
	// Initiates UI
	private void _InitUI() {
		setTitle("Cool Phone");
        setSize(new Dimension(350, 600));
        setLocationRelativeTo(null);
        setResizable(false);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setLayout(new GridLayout(2, 1));
        
        // add panels
        add(_Dialog());
        add(_KeyPad());
        
        setVisible(true);
	}
	
	// Dialog Panel
	private JPanel _Dialog() {
		JPanel dialog = new JPanel();
		JScrollPane scrollPane = new JScrollPane();
        JTextArea textArea = new JTextArea();
		
		dialog.setBackground(new Color(0x00333333));
		
		textArea.setLineWrap(true);
        textArea.setWrapStyleWord(true);
		
        pane.getViewport().add(textArea);
        
		dialog.add(textArea);
		
		
		return dialog;
	}
	
	// KeyPad Panel
	private JPanel _KeyPad() {
		JPanel keypad = new JPanel(new BorderLayout());
		
		keypad.setBackground(new Color(0x00ffffff));
		keypad.setBorder(BorderFactory.createEmptyBorder(20, 20, 20, 20));
		
		return keypad;
	}
}
